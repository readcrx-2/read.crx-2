{
  "name" : "read.crx 2",
  "version" : "1.14.2",
  "update_url": "http://readcrx-2.github.io/read.crx-2/updates.xml",
  "homepage_url": "http://readcrx-2.github.io/read.crx-2/",
  "description" : "2chブラウザ",
  "manifest_version": 2,
  "minimum_chrome_version" : "49",
  "content_security_policy": "default-src 'self'; img-src 'self' http://* https://* data:; style-src 'self' 'unsafe-inline'; connect-src 'self' http://*; child-src 'self' http://*; font-src data:; media-src 'self' http://* https://*",
  "incognito" : "split",
  "options_page" : "view/index.html?q=config",
  "permissions" : [
    "bookmarks",
    "cookies",
    "tabs",
    "storage",
    "unlimitedStorage",
    "notifications",
    "webRequest",
    "webRequestBlocking",
    "contextMenus",
    "http://*/",
    "https://*/"
  ],
  "app" : {
    "launch" : {
      "local_path" : "/view/index.html"
    }
  },
  "icons" : {
    "128" : "img/read.crx_128x128.png",
    "48" : "img/read.crx_48x48.png",
    "16" : "img/read.crx_16x16.png"
  },
  "content_scripts" : [
    {
      "matches" : [
        "http://*.2ch.net/*",
        "http://jbbs.shitaraba.net/*",
        "http://*.machi.to/*",
        "http://*.open2ch.net/*",
        "http://*.2ch.sc/*",
        "http://*.bbspink.com/*"
      ],
      "js" : ["/cs_addlink.js"]
    },
    {
      "matches" : [
        "http://*.2ch.net/test/bbs.cgi*",
        "http://*.bbspink.com/test/bbs.cgi*",
        "http://*.2ch.sc/test/bbs.cgi*",
        "http://*.open2ch.net/test/bbs.cgi*",
        "http://jbbs.shitaraba.net/bbs/write.cgi/*"
      ],
      "js" : ["/write/cs_write.js"],
      "run_at" : "document_end",
      "all_frames" : true
    }
  ],
  "web_accessible_resources": [
    "/view/index.html",
    "/view/board.html",
    "/view/bookmark.html",
    "/view/bookmark_source_selector.html",
    "/view/config.html",
    "/view/empty.html",
    "/view/history.html",
    "/view/writehistory.html",
    "/view/inputurl.html",
    "/view/search.html",
    "/view/sidemenu.html",
    "/view/thread.html"
  ]
}
