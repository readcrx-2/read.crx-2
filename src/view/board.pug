extends ../_base.pug

block vars
  - var name = "board";
  - var title = "board";
  - var html = {tabindex: "-1"};
  - var htmlClasses = ["view", "view_board"];
  - var body = {};
  - var needUI = true;
  - var needModule = true;
  - var needCss = true;

block body
  .message_bar
  nav.nav_bar
    label
      input.searchbox(type="search" placeholder="検索")
      span.hit_count
    .button.button_back.disabled(title="戻る")
    .button.button_forward.disabled(title="進む")
    .button.button_reload(title="再読み込み")
    .button.button_bookmark(title="ブックマークする")
    .button.button_write(title="新スレを立てる")
    .button.button_scheme(title="http/httpsの切り替え")
    .button.button_pause(title="自動更新一時停止")
    .button.button_tool(title="メニュー")
      ul.hidden
        li.button_link
          a(target="_blank") ブラウザで直接開く
        li.button_copy_title 板のタイトルをコピー
        li.button_copy_url 板のURLをコピー
        li.button_copy_title_and_url 板のタイトルとURLをコピー
        li.button_change_netsc 2ch.net/2ch.scに切り替え
        li.button_only_sc scのスレだけを表示する/両方表示する
        li.button_open_updated 未読があるスレッドを全て開く
    select.sort_item_selector
      option(data-sort-order="asc" data-sort-type="num" data-sort-index="data-thread-number") 標準
      option(data-sort-index="0") ブックマーク
      option(data-sort-index="1") タイトル
      option(data-sort-index="2") レス数
      option(data-sort-index="3") 未読数
      option(data-sort-index="4") 勢い
      option(data-sort-index="5") 作成日時
  .content(tabindex="0")
  footer.board_footer
    .loading_indicator.hidden 読み込み中

block temp
  template#template_thread_list_contextmenu
    menu.thread_list_contextmenu
      li.add_bookmark ブックマークに追加
      li.del_bookmark ブックマークを解除
      li.del_read_state 既読情報を削除
