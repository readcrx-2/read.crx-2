extends ../_base.pug

block vars
  - var name = "history";
  - var title = "閲覧履歴";
  - var html = {tabindex: "-1"};
  - var htmlClasses = ["view", "view_history"];
  - var body = {};
  - var needUI = true;
  - var needModule = true;
  - var needCss = true;

block body
  nav.nav_bar
    select.search_item_selector
      option(data-search-index="0") タイトル
      option(data-search-index="1") 板名
    label
      input.searchbox(type="search" placeholder="検索")
      span.hit_count
    .button.button_back.disabled(title="戻る")
    .button.button_forward.disabled(title="進む")
    .button.button_reload(title="再読み込み")
    .button.button_tool(title="メニュー")
      ul.hidden
        li.button_history_clear 閲覧履歴を消去
        li.button_show_unique.hidden 同じものは最新を一つだけ表示
        li.button_show_all 同じものでも全て表示
    select.sort_item_selector
      option(data-sort-index="0") タイトル
      option(data-sort-index="1") 板名
      option(data-sort-index="2") 閲覧日時
  .content(tabindex="0")
  .loading_overlay Loading...

block temp
  template#template_thread_list_contextmenu
    menu.thread_list_contextmenu
      li.del_history この履歴を削除
