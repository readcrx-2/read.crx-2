extends ../_base.pug

block vars
  - var name = "writehistory";
  - var title = "書込履歴";
  - var html = {tabindex: "-1"};
  - var htmlClasses = ["view", "view_writehistory"];
  - var body = {};
  - var needUI = true;
  - var needModule = true;
  - var needCss = true;

block body
  nav.nav_bar
    select.search_item_selector
      option(data-search-index="0") タイトル
      option(data-search-index="2") 名前
      option(data-search-index="3") メール
      option(data-search-index="4") 本文
    label
      input.searchbox(type="search" placeholder="検索")
      span.hit_count
    .button.button_back.disabled(title="戻る")
    .button.button_forward.disabled(title="進む")
    .button.button_reload(title="再読み込み")
    .button.button_tool(title="メニュー")
      ul.hidden
        li.button_history_clear 書込履歴を消去
    select.sort_item_selector
      option(data-sort-index="0") タイトル
      option(data-sort-index="1") レス番号
      option(data-sort-index="2") 名前
      option(data-sort-index="3") メール
      option(data-sort-index="4") 本文
      option(data-sort-index="5") 書込日時
  .content(tabindex="0")
  .loading_overlay Loading...

block temp
  template#template_thread_list_contextmenu
    menu.thread_list_contextmenu
      li.del_writehistory この履歴を削除
      li.ignore_res_number レス番号を無視してリンクを開く
